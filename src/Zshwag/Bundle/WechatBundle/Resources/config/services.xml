<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="zshwag.http_client.class">Buzz\Client\Curl</parameter>
    </parameters>
    <services>
        <service id="Symfony\Component\HttpFoundation\Session\Storage\Handler\PdoSessionHandler" public="false">
            <argument>mysql:host=%database_host%;port=%database_port%;dbname=%database_name%</argument>
            <argument type="collection">
                <argument key="db_username">%database_user%</argument>
                <argument key="db_password">%database_password%</argument>
            </argument>
        </service>
        <service id="zshwag.http_client" class="%zshwag.http_client.class%"/>
        <service id="security.authentication.listener.mini_program"
                 class="Zshwag\Bundle\WechatBundle\Security\Firewall\MiniProgramListener"
                 parent="security.authentication.listener.abstract"
                 abstract="true" />
        <service id="security.authentication.provider.mini_program"
                 class="Zshwag\Bundle\WechatBundle\Security\Authentication\Provider\MiniProgramProvider"
                 public="false" />
        <service id="zshwag.payum.gateway_factory_builder.miniprog"
                 class="Zshwag\Bundle\WechatBundle\Payum\MiniProgram\MiniProgramGatewayFactoryBuilder"
                 public="true">
            <argument>Zshwag\Bundle\WechatBundle\Payum\MiniProgram\MiniProgramGatewayFactory</argument>
            <argument type="service" id="orinoco_wechat.application.payment" />
            <tag name="payum.gateway_factory_builder" factory="miniprog" />
        </service>
        <service id="zshwag.payum.gateway_factory_builder.alipay_wap"
                 class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder"
                 public="true">
            <argument>Payum\Alipay\Wap\AlipayWapGatewayFactory</argument>
            <tag name="payum.gateway_factory_builder" factory="alipay_wap_checkout" />
        </service>
        <service id="zshwag.event.authentication_success_listener"
                 class="Zshwag\Bundle\WechatBundle\EventListener\AuthenticationSuccessListener">
            <tag name="kernel.event_listener" event="lexik_jwt_authentication.on_authentication_success" method="onAuthenticationSuccessResponse" />
        </service>
        <service id="zshwag.event.jwt_expired_listener"
                 class="Zshwag\Bundle\WechatBundle\EventListener\JWTExpiredListener">
            <tag name="kernel.event_listener" event="lexik_jwt_authentication.on_jwt_expired" method="onJWTExpired" />
        </service>
    </services>
</container>
